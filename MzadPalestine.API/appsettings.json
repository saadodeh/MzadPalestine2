{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=MzadPalestineDb;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True",
    "Redis": "localhost:6379"
  },
  "JWT": {
    "Key": "your-super-secret-key-with-minimum-length-of-32-characters",
    "Issuer": "MzadPalestine",
    "Audience": "MzadPalestineClient",
    "DurationInMinutes": 60,
    "RefreshTokenDurationInDays": 7
  },
  "EmailSettings": {
    "Mail": "your-email@gmail.com",
    "DisplayName": "MzadPalestine",
    "Password": "your-app-specific-password",
    "Host": "smtp.gmail.com",
    "Port": 587
  },
  "CloudinarySettings": {
    "CloudName": "your-cloud-name",
    "ApiKey": "your-api-key",
    "ApiSecret": "your-api-secret"
  },
  "PaymentSettings": {
    "StripeSecretKey": "your-stripe-secret-key",
    "StripePublishableKey": "your-stripe-publishable-key",
    "WebhookSecret": "your-stripe-webhook-secret"
  },
  "AllowedOrigins": "http://localhost:3000,https://mzadpalestine.com",
  "AdminSettings": {
    "DefaultAdminEmail": "admin@mzadpalestine.com",
    "DefaultAdminPassword": "Admin@123456"
  },
  "CacheSettings": {
    "RedisConnection": "localhost:6379",
    "DefaultExpirationMinutes": 60
  },
  "AuctionSettings": {
    "MinimumBidIncrement": 1.0,
    "MaximumActiveAuctions": 10,
    "AutoExtendMinutes": 5,
    "DefaultAuctionDurationHours": 24,
    "MaximumAuctionDurationDays": 30
  },
  "FileStorageSettings": {
    "MaxFileSizeMB": 10,
    "AllowedFileTypes": ".jpg,.jpeg,.png,.pdf",
    "StoragePath": "Uploads"
  },
  "NotificationSettings": {
    "EnableEmailNotifications": true,
    "EnablePushNotifications": true,
    "EnableSMSNotifications": false
  },
  "SecuritySettings": {
    "EnableTwoFactor": true,
    "LockoutMinutes": 30,
    "MaxFailedAttempts": 5,
    "PasswordExpirationDays": 90
  }
}
